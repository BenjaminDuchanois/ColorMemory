<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/joueurrang1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/or"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/joueurrang2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/argent"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/joueurrang3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bronze"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/joueurrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="1."
            android:layout_centerVertical="true"
            android:textSize="32dp"
            android:visibility="invisible"/>

        <View
            android:id="@+id/joueurline"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#006"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/joueurline">

            <TextView
                android:id="@+id/joueurscore"
                android:text="Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/joueurname"
                android:text="Pseudo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="105dp"
                android:layout_alignParentTop="true"
                android:translationY="12dp"/>

            <TextView
                android:id="@+id/joueurmail"
                android:text="Mail"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="105dp"
                android:translationY="-12dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>