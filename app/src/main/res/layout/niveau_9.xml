<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="4">
            <Button
                android:id="@+id/rouge9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_rouge"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/marron9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_marron"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/bleu9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_bleu"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/vertfonce9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_vertfonce"
                android:layout_margin="5dp"
                android:onClick="verif"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button

                android:id="@+id/orange9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_orange"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/violet9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_violet"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/turquoise9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_turquoise"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/rose9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_rose"
                android:layout_margin="5dp"
                android:onClick="verif"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/vert9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_vert"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/noir9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_noir"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/gris9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_gris"
                android:layout_margin="5dp"
                android:onClick="verif"/>

            <Button
                android:id="@+id/jaune9"
                android:layout_width="@dimen/taille_bouton"
                android:layout_height="@dimen/taille_bouton"
                android:layout_weight="1"
                android:background="@drawable/custom_jaune"
                android:layout_margin="5dp"
                android:onClick="verif"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>