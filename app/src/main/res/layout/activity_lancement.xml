<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/coche_facile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/facile"
                        android:layout_alignBottom="@+id/facile"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/coche"
                        android:visibility="invisible"
                        android:elevation="10dp"/>

                        <Button
                            android:id="@+id/facile"
                            android:layout_width="wrap_content"
                            android:layout_height="64dp"
                            android:layout_above="@+id/difficile"
                            android:layout_centerInParent="true"
                            android:background="@drawable/custom_vert"
                            android:textSize="32dp"
                            android:text="FACILE" />

                    <ImageView
                        android:id="@+id/coche_difficile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/difficile"
                        android:layout_alignBottom="@+id/difficile"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/coche"
                        android:visibility="invisible"
                        android:elevation="10dp"/>

                        <Button
                            android:id="@+id/difficile"
                            android:layout_width="wrap_content"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/custom_jaune"
                            android:layout_margin="16dp"
                            android:textSize="32dp"
                            android:text="DIFFICILE" />


                    <ImageView
                        android:id="@+id/coche_special"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/special"
                        android:layout_alignBottom="@+id/special"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/coche"
                        android:visibility="invisible"
                        android:elevation="10dp"/>

                    <Button
                        android:id="@+id/special"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:background="@drawable/custom_gris"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/expert"
                        android:textSize="32dp"
                        android:layout_marginTop="16dp"
                        android:visibility="invisible"
                        android:text="SpÃ©cial" />

                    <ImageView
                        android:id="@+id/coche_expert"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/expert"
                        android:layout_alignBottom="@+id/expert"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/coche"
                        android:visibility="invisible"
                        android:elevation="10dp"/>

                    <Button
                        android:id="@+id/expert"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:text="EXPERT"
                        android:layout_below="@+id/difficile"
                        android:background="@drawable/custom_rouge"
                        android:textSize="32dp"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/coche_chrono"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/chrono"
                        android:layout_alignBottom="@+id/chrono"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/coche"
                        android:visibility="invisible"
                        android:elevation="10dp"/>

                    <Button
                        android:id="@+id/chrono"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_toRightOf="@+id/expert"
                        android:background="@drawable/chrono"
                        android:layout_marginLeft="32dp"
                        android:textSize="32dp"
                        android:layout_alignBottom="@+id/difficile"/>

                    <TextView
                        android:id="@+id/text_chrono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHRONO"
                        android:textSize="18dp"
                        android:layout_below="@+id/chrono"
                        android:layout_alignLeft="@+id/chrono"
                        android:translationX="5dp"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/test"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:text="TEST"
                        android:layout_marginBottom="16dp"
                        android:layout_above="@+id/facile"
                        android:background="@drawable/custom_bleu"
                        android:textSize="32dp"
                        android:layout_centerInParent="true"
                        android:visibility="invisible"/>


                </RelativeLayout>

</android.support.constraint.ConstraintLayout>
